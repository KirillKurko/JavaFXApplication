<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="code.controllers.MainController" xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10">
<padding><Insets top="25" right="10" bottom="25" left="10"/></padding>

    <Button fx:id="addNameButton" text="Enter name" prefWidth="100" prefHeight="25"  GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Button fx:id="processSelectedSurnamesButton" text="Process" prefWidth="100" prefHeight="25" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

    <Label text="Surname" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Label text="Name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Fatherland" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <Label text="Processed" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

    <ListView fx:id="surnameListView" prefWidth="100" prefHeight="300" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <ListView fx:id="nameListView" prefWidth="100" prefHeight="300" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <ListView fx:id="fatherlandListView" prefWidth="100" prefHeight="300" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <ListView fx:id="processedListVies" prefWidth="100" prefHeight="300" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

</GridPane>